    </style>
    
    <style name="textStyle_white_14">
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">14sp</item>	
	</style>
	
    <style name="textStyle_scenic_detail_category">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ramble_detail_item_title_style">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ramble_detail_item_summary_style">
