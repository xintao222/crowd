<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/windown_background</item>
<!--         <item name="switchStyle">@style/Widget.Holo.CompoundButton.Switch</item> -->
    </style>
    
    <!-- Slash activity theme. -->
    <style name="SlashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/slash</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
	<!-- Zxing capture theme -->
	<style name="CaptureTheme" parent="android:Theme">
	    <item name="android:windowFullscreen">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	</style>
	
    <!-- 自定义loading -->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item><!--边框-->
	    <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
	    <item name="android:windowIsTranslucent">false</item><!--半透明-->
	    <item name="android:windowNoTitle">true</item><!--无标题-->
	    <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
	    <item name="android:backgroundDimEnabled">false</item><!--模糊--> 
	</style>
	
    <style name="ShakeResultDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
	    <item name="android:button">@drawable/checkbox_selector</item>
	    <item name="android:paddingLeft">25.0dip</item>
	    <item name="android:maxHeight">10.0dip</item>
	</style>
	
    <style name="title_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    
	<!-- Home Activity Style -->

	<style name="home_activity_item_layout_style">
	  	<item name="android:layout_width">match_parent</item>
	  	<item name="android:layout_height">0dp</item>
	  	<item name="android:layout_weight">1</item>
	  	<item name="android:gravity">center_vertical</item>
	</style>

	<style name="gridview_icon_style">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">6dp</item>	    	        
	</style>
	
    <style name="gridview_content_text_style">
        <item name="android:textColor">@color/gridview_content_color</item>
        <item name="android:textSize">16sp</item>
         <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        
    </style>
        
    <style name="gridview_description_text_style">
        <item name="android:textColor">@color/gridview_description_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
<!--     <style name="tab_style" parent="@android:style/Widget.TabWidget"> -->
<!--         <item name="*android:tabLayout">@layout/tab_indicator_home</item> -->
<!--     </style> -->
    
    <style name="slidingmenu_listitem_text_style">
        <item name="android:textColor">@color/slidigmenu_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

	<style name="slidingmenu_title_text_style">
        <item name="android:textColor">@color/slidigmenu_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="textStyle_black_18">
	    <item name="android:textColor">@color/text_black</item>
	    <item name="android:textSize">18sp</item>	
	</style>
	
    <style name="textStyle_black_16">
	    <item name="android:textColor">@color/text_black</item>
	    <item name="android:textSize">16sp</item>	
	</style>
	
	<style name="textStyle_white_18">
	    <item name="android:textColor">@color/text_white</item>
	    <item name="android:textSize">18sp</item>	
	</style>
    
    <style name="top_tabbar_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/top_tabbar_text_color</item>
    </style>
    
    <style name="button_base_style" parent="android:style/Widget.Button">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="button_oriange_style" parent="button_base_style">
        <item name="android:background">@drawable/rectangle_background_orange</item>
    </style>
    
    <style name="button_grey_style" parent="button_base_style">
        <item name="android:textColor">@color/text_color_black</item>
